---
import Layout from '../layouts/Layout.astro';
import ToDo from '../components/ToDo.astro';
import Header from '../components/Header';
---

<Layout title="Home">
  <main>
    <Header />
    <!-- <input class="title-input text-black" type="text" /> -->
    <ul role="list" class="todo-card-grid cursor-default select-none">
			<ToDo
				title="Priority-based Task Sorting"
				description="Effortlessly prioritize tasks by urgency and importance."
			/>
			<ToDo
				title="User-Friendly Interface"
				description="Seamless and intuitive design for efficient task management."
			/>
			<ToDo
				title="Machine Learning Predictions"
				description="Harness AI to predict and suggest upcoming tasks."
			/>
			<ToDo
				title="Insightful Data Analytics"
				description="Gain valuable insights into your productivity patterns."
			/>
			<ToDo
				title="Deadline Alerts"
				description="Never miss a deadline with timely task notifications."
			/>
			<ToDo
				title="Collaborative Task Management"
				description="Enhance teamwork with shared task lists and updates."
			/>
		</ul>
  </main>
</Layout>

<style>
  body{
		width: 100%;
	}
  main {
		margin: auto;
		padding: 6rem 1rem 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
  .astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 0.5rem;
		border-radius: 8px;
		text-align: center;
		font-size: x-large;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.todo-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1.5rem;
		padding-top: 5px;
	}
    .title-input{
        width: 60%;
        align-items: center;
    }
</style>
